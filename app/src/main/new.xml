<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:fillViewport="true" tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
        android:layout_height="wrap_content" android:padding="16dp">

        <!-- Encabezado de la App -->
        <com.google.android.material.textview.MaterialTextView android:id="@+id/tvAppTitle"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:text="Nombre de tu App" android:textAppearance="?attr/textAppearanceHeadline4"
            android:gravity="center" android:paddingTop="16dp" android:paddingBottom="16dp"
            android:textColor="?attr/colorPrimary" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Sección de Ubicación -->
        <com.google.android.material.card.MaterialCardView android:id="@+id/cardLocation"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_marginTop="16dp" app:cardCornerRadius="8dp" app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvAppTitle"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                android:layout_height="wrap_content" android:padding="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnObtenerUbicacion" android:layout_width="0dp"
                    android:layout_height="wrap_content" android:text="Obtener Ubicación Actual"
                    app:icon="@drawable/ic_location" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <com.google.android.material.textview.MaterialTextView android:id="@+id/tvUbicacion"
                    android:layout_width="0dp" android:layout_height="wrap_content"
                    android:layout_marginTop="8dp" android:text="Ubicación no obtenida."
                    android:textAppearance="?attr/textAppearanceBody2" android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@id/btnObtenerUbicacion"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Título Catálogo de Productos -->
        <com.google.android.material.textview.MaterialTextView android:id="@+id/tvCatalogoTitle"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_marginTop="24dp" android:text="Nuestro Catálogo Estrella"
            android:textAppearance="?attr/textAppearanceHeadline5"
            android:textColor="?attr/colorSecondary"
            app:layout_constraintTop_toBottomOf="@id/cardLocation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- RecyclerView para Productos -->
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/rvProductos"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_marginTop="8dp" android:minHeight="200dp"
            app:layout_constraintTop_toBottomOf="@id/tvCatalogoTitle"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            tools:listitem="@layout/item_producto_placeholder" /> <!-- Placeholder para diseño -->

        <!-- Sección de Resumen de Compra y Despacho -->
        <com.google.android.material.card.MaterialCardView android:id="@+id/cardResumenCompra"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_marginTop="16dp" app:cardCornerRadius="8dp" app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/rvProductos"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                android:layout_height="wrap_content" android:padding="16dp">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvResumenTitle" android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:text="Resumen de Compra"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvLabelTotalProductos" android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_marginTop="8dp"
                    android:text="Subtotal Productos:"
                    android:textAppearance="?attr/textAppearanceBody1"
                    app:layout_constraintTop_toBottomOf="@id/tvResumenTitle"
                    app:layout_constraintStart_toStartOf="parent" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvTotalProductos" android:layout_width="0dp"
                    android:layout_height="wrap_content" android:text="$0.00"
                    android:textAppearance="?attr/textAppearanceBody1" android:gravity="end"
                    app:layout_constraintTop_toTopOf="@id/tvLabelTotalProductos"
                    app:layout_constraintBottom_toBottomOf="@id/tvLabelTotalProductos"
                    app:layout_constraintStart_toEndOf="@id/tvLabelTotalProductos"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp" />


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvLabelCostoDespacho" android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_marginTop="4dp"
                    android:text="Costo de Despacho:"
                    android:textAppearance="?attr/textAppearanceBody1"
                    app:layout_constraintTop_toBottomOf="@id/tvLabelTotalProductos"
                    app:layout_constraintStart_toStartOf="parent" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvCostoDespacho" android:layout_width="0dp"
                    android:layout_height="wrap_content" android:text="$0.00 (Calculando...)"
                    android:textAppearance="?attr/textAppearanceBody1" android:gravity="end"
                    app:layout_constraintTop_toTopOf="@id/tvLabelCostoDespacho"
                    app:layout_constraintBottom_toBottomOf="@id/tvLabelCostoDespacho"
                    app:layout_constraintStart_toEndOf="@id/tvLabelCostoDespacho"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp" />

                <View android:id="@+id/divider" android:layout_width="0dp"
                    android:layout_height="1dp" android:background="?android:attr/listDivider"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/tvLabelCostoDespacho"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvLabelTotalCompra" android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_marginTop="8dp"
                    android:text="Total Compra:"
                    android:textAppearance="?attr/textAppearanceHeadline6" android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/divider"
                    app:layout_constraintStart_toStartOf="parent" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvTotalCompra" android:layout_width="0dp"
                    android:layout_height="wrap_content" android:text="$0.00"
                    android:textAppearance="?attr/textAppearanceHeadline6" android:textStyle="bold"
                    android:gravity="end" android:textColor="?attr/colorPrimary"
                    app:layout_constraintTop_toTopOf="@id/tvLabelTotalCompra"
                    app:layout_constraintBottom_toBottomOf="@id/tvLabelTotalCompra"
                    app:layout_constraintStart_toEndOf="@id/tvLabelTotalCompra"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>


        <!-- Sección de Temperatura del Camión -->
        <com.google.android.material.card.MaterialCardView android:id="@+id/cardTemperatura"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_marginTop="16dp" android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp" app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/cardResumenCompra"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"> <!-- Asegura que sea el último si no hay scroll -->


            <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                android:layout_height="wrap_content" android:padding="16dp">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvTemperaturaTitle" android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Control de Temperatura (Camión)"
                    android:textAppearance="?attr/textAppearanceSubtitle1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilTemperatura"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp" android:layout_height="wrap_content"
                    android:layout_marginTop="8dp" android:hint="Temperatura (°C)"
                    app:suffixText="°C" app:prefixText="- "
                    app:startIconDrawable="@drawable/ic_thermostat"
                    app:layout_constraintTop_toBottomOf="@id/tvTemperaturaTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etTemperatura" android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberSigned|numberDecimal" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvAlertaTemperatura" android:layout_width="0dp"
                    android:layout_height="wrap_content" android:layout_marginTop="8dp"
                    android:text="Temperatura dentro del rango."
                    android:textAppearance="?attr/textAppearanceCaption"
                    android:textColor="@color/design_default_color_primary_dark"
                    app:drawableStartCompat="@drawable/ic_check_circle"
                    android:drawablePadding="4dp" android:visibility="gone"
                    tools:visibility="visible"
                    app:layout_constraintTop_toBottomOf="@id/tilTemperatura"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
